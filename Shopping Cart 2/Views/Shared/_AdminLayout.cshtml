﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.5/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Shopping_Cart_2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/adminstyle.css" />

    <link rel="stylesheet" href="~/css/bootstrap.min(3).css" />
     
</head>
<body>
    <div class="main-contaier">
        <div class="sidenav">
            
            <a class="nav-link  " asp-controller="AdminOperations" asp-action="AllOrders">Orders</a>
            <a class="nav-link  " asp-controller="Stock" asp-action="Index">Stock</a>
            <a class="nav-link  " asp-area="" asp-controller="AdminOperations" asp-action="GetAllItems">Items of All Users</a>
            <a href="/Reports/TopFiveSellingBooks" class="navigation-link"><i class="bi bi-bar-chart"></i> Top Salling Items</a>
        </div>
        <div class="right-panel">
            <nav class="nav-bar">
                <div class="nav-heading">Welcome @User.Identity?.Name</div>
                <div class="nav-actions">
                    <a href="/Identity/Account/Manage/Index" class="navigation-link"><i class="bi bi-gear"></i> Manage account</a>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="navigation-link">
                            <i class="bi bi-box-arrow-left"></i> Logout
                        </button>
                    </form>
                </div>
            </nav>
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/2.0.5/js/dataTables.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>