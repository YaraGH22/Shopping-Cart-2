

@model IEnumerable<Item>

@{
    ViewData["Titles"] = "Home Page";
}

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">

        <h4 class="alert-heading ">No games !</h4>
        <p class="mb-0">No games were added yet..</p>
    </div>

}
else
{
    <div>
        <form asp-controller="Home" asp-action="Index" class="d-flex">
            <input name="seachName" class="form-control me-2" type="search" placeholder="Search" aria-label="Search"
                   value="@ViewBag.seachName">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>

    <div class="w-100 mt-4 d-flex flex-wrap ">
        @foreach (var book in Model)
        {
            <div class="card mx-3 mb-4" style="width: 11rem;">
                @if (string.IsNullOrEmpty(book.Cover))
                {
                    <img style="width:100%;height:180px" src="/assets/images/NoImage.png" class="card-img-top" alt="...">

                }
                else
                {
                    <img style="width:100%;height:180px" src="/assets/images/items/@book.Cover" class="card-img-top" alt="...">
                }
                <div class="card-body">
                    <h5 class="card-title">@book.Name</h5>
                    <p class="card-text">
                        <b>Genre: </b>@book.Category.Name <br />
                        <b>Price: </b>@book.Price
                        @* <br/> <b>@book.Quantity</b> *@
                    </p>
                    @if (book.Quantity > 0)
                    {
                        <button type="button" onclick="add(@book.Id)" class="btn btn-primary">Add to cart</button>
                    }
                    else
                    {
                        <span style="border: 1px solid;padding: 5px 8px;color: red;border-radius: 5px;">Out of stock</span>
                    }
                </div>
            </div>
        }
    </div>

}