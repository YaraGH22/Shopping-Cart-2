

@model IEnumerable<Item>

@{
    ViewData["Titles"] = "Home Page";

}

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">

        <h4 class="alert-heading ">No items !</h4>
        <p class="mb-0">No items were added yet..</p>
    </div>

}
else
{
    // search
    <div>
        <form asp-controller="Home" asp-action="Index" class="d-flex">
            <input name="seachName" class="form-control me-2" type="search" placeholder="Search" aria-label="Search"
                   value="@ViewBag.seachName">
            <button class="btn btn-outline-success" type="submit">Search</button>
            <a href="/Home/Index" class="btn btn-dark ">Reset</a>
        </form>
    </div>
    // feltering
    <ul class="nav justify-content-center">
        @foreach (var g in ViewBag.categories)
        {
            <li class="nav-item">
                <a class="nav-link active" asp-action="Index" asp-route-categoryName="@g.Name">@g.Name</a>
            </li>
        }
    </ul>
    <div class="w-100 mt-4 d-flex flex-wrap ">
        @foreach (var item in Model)
        {
            <div class="card mx-3 mb-4" style="width: 11rem;">
                @if (string.IsNullOrEmpty(item.Cover))
                {
                    <img style="width:100%;height:180px" src="/assets/images/NoImage.png" class="card-img-top" alt="...">

                }
                else
                {
                    <img style="width:100%;height:180px" src="/assets/images/items/@item.Cover" class="card-img-top" alt="...">
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">
                        <b>Genre: </b>@item.Category.Name <br />
                        <b>Price: </b>@item.Price
                        @* <br/> <b>@book.Quantity</b> *@
                    </p>
                    @if (item.Quantity > 0)
                    {
                        <button type="button" onclick="add(@item.Id)" class="btn btn-primary">Add to cart</button>
                    }
                    else
                    {
                        <span style="border: 1px solid;padding: 5px 8px;color: red;border-radius: 5px;">Out of stock</span>
                    }
                </div>
            </div>
        }
    </div>
}
@section Scripts{
    <script>
        async function add(itemId) {
            var usernameEl = document.getElementById("username");
            if (usernameEl == null) {
                window.location.href = "/Identity/Account/Login";
                
            }
            try {
                var response = await fetch(`/Cart/AddItem?itemId=${itemId}`);
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                    window.location.href = "#cartCount";
                }
            }
            catch (err) {
                console.log(err);
            }
        }
    </script>
    }