@model IEnumerable<Item>



 

<div class="container py-5">
    <!-- For Demo Purpose-->
    <header class="text-center mb-5">
        <!-- feltering -->
        <ul class=" nav justify-content-center links-container cat">
            @foreach (var g in ViewBag.categories)
            {
                <li  >
                    <a class=" btn btn-dark cat" asp-action="Products" asp-route-categoryName="@g.Name">@g.Name</a>
                </li>
            }
        </ul>
        <!--search-->
        <div class="container search">
            <form asp-controller="Home" asp-action="Products" class="d-flex ">
                <input name="seachName" class="form-control me-2  " type="search" placeholder="Search" aria-label="Search"
                       value="@ViewBag.seachName">
                <button class="btn btn-outline-success  " type="submit">Search</button>
                <a href="/Home/Products" class="btn btn-dark ">Reset</a>
            </form>
        </div>
        <h1 class="display-4 font-weight-bold">Click And Buy</h1>
        <p class="font-italic text-muted mb-0">An awesome Bootstrap 4 cards collection with variant content.</p> 
    </header>
    
    <!-- First Row [Prosucts]-->
    <h2 class="font-weight-bold mb-2">From the Shop</h2>
    <p class="font-italic text-muted mb-4">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt.</p>
    @if (!Model.Any())
    {
        <div class="container alert alert-warning mt-5">

            <h4 class="alert-heading ">No items !</h4>
            <p class="mb-0">No items were added yet..</p>
        </div>
    }
    else
    {

        <div class="row pb-5 mb-4">
            @foreach (var item in Model)
            {
            <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                <!-- Card--> 
                <div class="card rounded shadow-sm border-0">
                    <div class="card-body p-4">
                            <a asp-controller="Items" asp-action="Details" asp-route-itemId="@item.Id">
                                @if (string.IsNullOrEmpty(item.Cover))
                                {
                                    <img style="width:100%;height:180px" src="/assets/images/NoImage.png" class="card-img-top" alt="...">

                                }
                                else
                                {
                                    <img style="width:100%;height:180px" src="/assets/images/items/@item.Cover" class="card-img-top" alt="...">
                                }
                            </a>
                            <h5> <a href="#" class="text-dark">@item.Name</a></h5>
                            <h5>  @item.Price $ </h5>
                        <p class="small text-muted font-italic"> @item.Description</p>
                        <ul class="list-inline small">
                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                            <li class="list-inline-item m-0"><i class="fa fa-star-o text-success"></i></li>
                        </ul>
                    </div>
                </div> 
            </div>
            }
        </div>
    } 
</div> 
 
@section Scripts {

    <script>
        async function add(itemId) {
            var usernameEl = document.getElementById("username");
            if (usernameEl == null) {
                window.location.href = "/Identity/Account/Login";

            }
            try {
                var response = await fetch(`/Cart/AddItem?itemId=${itemId}`);
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                    window.location.href = "#cartCount";
                }
            }
            catch (err) {
                console.log(err);
            }
        }
    </script>
}



